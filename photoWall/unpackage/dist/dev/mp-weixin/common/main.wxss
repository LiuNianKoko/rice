.disCenter{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.font24{
	font-size: 24rpx;
}
.text-white{
	color: #fff;
}
.text-center{
	text-align: center;
}
.bgWhite{
	background-color: #fff;
}
.scale-1px-bottom{
	position: relative;
	border: none;
}
.scale-1px-bottom::after{
	content: '';
	position: absolute;
	bottom: 0;
	right: 0;
	background: #f4f4f4;
	height: 1px;
	width: 100%;
	-webkit-transform: scaleY(0.5);
	transform: scaleY(0.5);
	-webkit-transform-origin: 0 0;
	transform-origin: 0 0;
}
