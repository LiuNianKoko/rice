page {
  background-color: #f4f4f4;
}
.blank {
  height: 90rpx;
}
.tab-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 90rpx;
  padding: 0 50rpx;
  width: 100%;
  position: fixed;
  left: 0;
  z-index: 100;
  background-color: #fff;
}
.tab-wrap .tab-item {
  height: 90rpx;
  line-height: 110rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #272727;
}
.tab-wrap .act {
  color: #EC7A8E;
  position: relative;
  background-color: #fff;
  border: none;
}
.tab-wrap .act::after {
  content: '';
  width: 76rpx;
  height: 6rpx;
  -webkit-border-radius: 6rpx;
          border-radius: 6rpx;
  background: -webkit-gradient(linear, left top, right top, from(#FF99D9), to(#FFAF99));
  background: -webkit-linear-gradient(left, #FF99D9 0%, #FFAF99 100%);
  background: linear-gradient(90deg, #FF99D9 0%, #FFAF99 100%);
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.coupon-wrap {
  padding: 46rpx 23rpx;
}
.coupon-wrap .coupon-item {
  height: 184rpx;
  position: relative;
  margin-bottom: 16rpx;
}
.coupon-wrap .coupon-item .lg-coupon-bg {
  width: 100%;
  height: 184rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.coupon-wrap .coupon-item .coupon-main {
  position: relative;
  z-index: 10;
  width: 85%;
  height: 184rpx;
}
.coupon-wrap .coupon-item .coupon-main .price-wrap {
  width: 48%;
  color: #EC7A8E;
}
.coupon-wrap .coupon-item .coupon-main .price-wrap .price {
  font-size: 106rpx;
  font-weight: bold;
  position: relative;
}
.coupon-wrap .coupon-item .coupon-main .price-wrap .symbol {
  font-size: 32rpx;
  font-weight: bold;
  position: absolute;
  right: -32rpx;
  top: 20rpx;
}
.coupon-wrap .coupon-item .coupon-main .coupon-line {
  width: 2rpx;
  height: 104rpx;
  background-color: #E5E5E5;
}
.coupon-wrap .coupon-item .coupon-main .coupon-txt {
  color: #99939A;
  font-size: 26rpx;
  width: 52%;
  padding-left: 40rpx;
  padding-right: 25rpx;
}
.coupon-wrap .coupon-item .coupon-main .coupon-txt-other {
  color: #d4d4d4;
}
.coupon-wrap .coupon-item .coupon-main .coupon-txt-and {
  color: #b9b9b9;
}
.coupon-wrap .coupon-item .coupon-main .color-gr {
  color: #BEBEBE;
}
.coupon-wrap .coupon-item .btn {
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  z-index: 10;
  right: 6%;
  top: 50%;
  width: 24rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  line-height: 24rpx;
}

