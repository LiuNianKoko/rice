.addr-wrap {
  padding: 16rpx;
}
.addr-item {
  border: 1px solid #D1D1D1;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  margin-bottom: 27rpx;
  padding: 0 35rpx;
  position: relative;
}
.addr-item .addr-hid {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
}
.addr-item .addr-top {
  padding: 34rpx 0;
}
.addr-item .addr-main {
  position: relative;
  padding-bottom: 30rpx;
}
.addr-item .addr-main .addr-ress {
  padding-right: 220rpx;
}
.addr-item .addr-main .addr-ress .lg-local {
  width: 37rpx;
  height: 47rpx;
  margin-right: 20rpx;
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
}
.addr-item .addr-main .addr-ress .addr-txt {
  font-size: 22rpx;
  color: #535353;
}
.addr-item .addr-main .addr-btn-wrap {
  position: absolute;
  z-index: 10;
  right: 0;
  top: 0;
}
.addr-item .addr-main .addr-btn-wrap .lg-addr {
  width: 68rpx;
  height: 44rpx;
}
.addr-item .addr-main .addr-btn-wrap .lg-addr-right {
  border-right: 1px solid #eee;
}
.addr-item .addr-main .addr-btn-wrap .lg-addr-edit {
  width: 38rpx;
  height: 35rpx;
}
.addr-item .addr-main .addr-btn-wrap .lg-addr-trash {
  width: 34rpx;
  height: 36rpx;
}
.addr-item .addr-bot {
  padding: 18rpx 0 24rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.addr-item .addr-bot .addr-default {
  color: #929292;
  font-size: 22rpx;
  margin-right: 20rpx;
}
.addr-item .addr-bot .sel {
  width: 30rpx;
  height: 30rpx;
}
.blank {
  height: 170rpx;
}
.btn-wrap {
  padding: 30rpx 30rpx 50rpx;
  background-color: #fff;
  width: 100%;
  z-index: 100;
  position: fixed;
  bottom: 0;
  left: 0;
}
.btn-wrap .btn {
  height: 90rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #EB798D;
  border: 1px solid #EB798D;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  text-align: center;
  line-height: 90rpx;
}

