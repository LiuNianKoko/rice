  padding: 80rpx 30rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
}
.box {
  text-align: center;
}
.box .logo {
  width: 240rpx;
  height: 240rpx;
}
.btnBox {
  margin-top: 172rpx;
  padding: 0 32rpx;
}
.btnBox .loginBtn {
  width: 100%;
  height: 100rpx;
  color: #fff;
  font-size: 36rpx;
  line-height: 100rpx;
  background: -webkit-gradient(linear, left top, right top, from(#ff99dd), to(#ffb19b));
  background: -webkit-linear-gradient(left, #ff99dd 0%, #ffb19b 100%);
  background: linear-gradient(90deg, #ff99dd 0%, #ffb19b 100%);
  -webkit-border-radius: 5px;
          border-radius: 5px;
}
