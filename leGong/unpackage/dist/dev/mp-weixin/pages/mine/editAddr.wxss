page {
  background-color: #f4f4f4;
}
.bor {
  border-bottom: 1px solid #F1F1F1;
}
.edit-wrap {
  background-color: #fff;
  padding: 0 38rpx;
  margin-bottom: 22rpx;
}
.edit-wrap .edit-item {
  padding: 38rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.edit-wrap .edit-item .edit-left {
  width: 180rpx;
  color: #434343;
  font-size: 27rpx;
  font-weight: bold;
}
.edit-wrap .edit-item .edit-right {
  width: 90%;
  position: relative;
}
.edit-wrap .edit-item .edit-right .inputs {
  font-size: 26rpx;
}
.edit-wrap .edit-item .edit-right-area {
  padding-right: 50rpx;
}
.edit-wrap .edit-item .edit-right-area .lg-local {
  width: 40rpx;
  height: 52rpx;
  position: absolute;
  right: 0;
  top: -4rpx;
  z-index: 10;
}
.de-wrap {
  padding: 24rpx 20rpx 24rpx 40rpx;
  background-color: #fff;
}
.de-wrap .de-txt {
  color: #303030;
  font-size: 27rpx;
  font-weight: bold;
}
.blank {
  height: 170rpx;
}
.btn-wrap {
  padding: 30rpx 30rpx 50rpx;
  background-color: #f4f4f4;
  width: 100%;
  z-index: 100;
  position: fixed;
  bottom: 0;
  left: 0;
}
.btn-wrap .btn {
  height: 90rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #EB798D;
  border: 1px solid #EB798D;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  text-align: center;
  line-height: 90rpx;
}
.hid {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}

