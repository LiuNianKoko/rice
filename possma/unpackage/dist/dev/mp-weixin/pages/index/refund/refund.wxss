
.content{}
.content .uni-input-placeholder{font-size: 14px;}
.content .input{border-bottom: 1px solid rgba(0,0,0,0.1);width:90%;padding:2.5%;margin:20rpx 0;margin-left: 2.5%;}
.content .btn{width:90%;margin-left: 5%;margin-top:200rpx;background: rgb(78,178,244);color:white;padding:20rpx 0;border-radius: 200rpx;text-align: center;}
.content .showShadow{width:100%;height:100%;position: fixed;top:0;left:0;}
.content .showShadow .close{width:100%;height:100%;position: fixed;top:0;left:0;background: rgba(0,0,0,0.4);}
.content .showShadow .bg_white{width:70%;padding:5%;height:auto;border-radius:15rpx;background: white;position: fixed;top:30%;left:10%;z-index: 2;}
.content .showShadow .bg_white .title{color:#383838;font-size: 21px;text-align: center;}
.content .showShadow .bg_white .contents{font-size: 14px;color:#9A9A9A;margin:30rpx 0;text-align: center;}
.content .showShadow .bg_white .iconBox{display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-pack: center;-webkit-justify-content: center;justify-content: center;}
.content .showShadow .bg_white .icons{width:172rpx;height:180rpx;}
.content .showShadow .bg_white .sure{width:42.5%;padding:2.5%;margin-left: 2.5%;float: left;margin-top: 50rpx;background: -webkit-linear-gradient(left,rgb(54,178,255),rgb(74,214,255));background: linear-gradient(to right,rgb(54,178,255),rgb(74,214,255));color:white;border-radius: 110rpx;text-align: center;}
.content .showShadow .bg_white .falseBtn{background: rgb(211,211,211);}



