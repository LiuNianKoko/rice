iew><view class="payMent"><view class="priceNum">{{"￥ "+item.payPrice}}</view><view class="names">应付总额：</view></view><view class="clearBoth"></view><block wx:if="{{item.status==2}}"><view data-event-opts="{{[['tap',[['btns',[2,'$0','$1'],[[['orderData','',index,'id']],[['orderData','',index]]]]]]]}}" class="btns bg_white" bindtap="__e">查看物流</view></block><block wx:if="{{item.status==4}}"><view data-event-opts="{{[['tap',[['btns',[0,'$0','$1'],[[['orderData','',index,'sellsId']],[['orderData','',index]]]]]]]}}" class="btns bg_blue" bindtap="__e">再次购买</view></block><block wx:if="{{item.status==1}}"><view data-event-opts="{{[['tap',[['btns',[1,'$0','$1'],[[['orderData','',index,'id']],[['orderData','',index]]]]]]]}}" class="btns bg_blue" bindtap="__e">提醒发货</view></block><block wx:if="{{item.status==3}}"><view data-event-opts="{{[['tap',[['btns',[4,'$0','$1'],[[['orderData','',index,'id']],[['orderData','',index]]]]]]]}}" class="btns bg_blue" bindtap="__e">立即评价</view></block><block wx:if="{{item.status==2}}"><view data-event-opts="{{[['tap',[['btns',[3,'$0','$1'],[[['orderData','',index,'id']],[['orderData','',index]]]]]]]}}" class="btns bg_blue" bindtap="__e">确认收货</view></block><view class="clearBoth"></view></view></block></block><view class="clearBoth"></view><block wx:if="{{orderData==''}}"><view class="none fontSize14">暂无数据</view></block></view></view>