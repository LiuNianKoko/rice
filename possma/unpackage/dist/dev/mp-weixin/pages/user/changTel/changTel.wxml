<view class="content"><input class="inputBox" type="number" disabled="{{true}}" value="{{tel}}"/><view class="btnBox"><input class="inputBox marignInput" type="number" placeholder="请输入短信验证码" maxlength="6" data-event-opts="{{[['input',[['getCode',['$event']]]]]}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['CodeBtn',[1]]]]]}}" class="btn" bindtap="__e">{{codeName}}</view></view><input class="inputBox marignInput" type="number" maxlength="11" placeholder="请输入新手机号" data-event-opts="{{[['input',[['getNewTel',['$event']]]]]}}" bindinput="__e"/><view class="btnBox"><input class="inputBox marignInput" type="number" placeholder="请输入短信验证码" maxlength="6" data-event-opts="{{[['input',[['getCodes',['$event']]]]]}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['CodeBtn',[2]]]]]}}" class="btn" bindtap="__e">{{codeNames}}</view></view><view data-event-opts="{{[['tap',[['sureBtn',['$event']]]]]}}" class="sure" bindtap="__e">确认</view><block wx:if="{{showDow}}"><view class="showShadow"><view class="close"></view><view class="bg_white"><view class="title">{{status.title}}</view><view class="contents">{{status.content}}</view><view class="iconBox"><image class="icons" src="{{status.src}}" mode="widthFix"></image></view><view data-event-opts="{{[['tap',[['shadowSure',['$event']]]]]}}" class="sure" bindtap="__e">确定</view></view></view></block></view>