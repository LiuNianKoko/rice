.segmented {
  position: -webkit-sticky;
  position: sticky;
}
.segmented-control {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #ffffff;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f6f6f6;
}
.segmented-control .segmented-control-item {
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 32rpx;
  color: #BBBBBB;
}
.segmented-control .active {
  color: #FB4142;
}
.line {
  height: 6rpx;
  -webkit-border-radius: 3rpx;
          border-radius: 3rpx;
  background-color: #FB4142;
  position: absolute;
  top: 80rpx;
  left: 0;
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
}

