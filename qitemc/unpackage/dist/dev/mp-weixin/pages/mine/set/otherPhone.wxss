button::after {
  border: none;
}
.input-box {
  padding: 60rpx;
  font-size: 30rpx;
}
.input-box .input-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: white;
  border-bottom: 1rpx solid #eeeeee;
  line-height: 133rpx;
  height: 133rpx;
}
.input-box .input-item .input-label {
  width: 150rpx;
}
.input-box .input-item .input-body {
  position: relative;
  height: 133rpx;
  width: calc(100% - 150rpx);
}
.input-box .input-item .input-body .input {
  line-height: 133rpx;
  height: 133rpx;
  position: relative;
  font-size: 28rpx;
}
.input-box .input-item .input-body .eye {
  position: absolute;
  height: 50rpx;
  width: 50rpx;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.input-box .input-item .input-body .btn-code {
  position: absolute;
  right: 0rpx;
  top: 50%;
  z-index: 2;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  color: #00a0e9;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  text-align: center;
  padding: 0;
  line-height: 60rpx;
  width: 160rpx;
  height: 60rpx;
  border: 2rpx solid #00a0e9;
  -webkit-border-radius: 6rpx;
          border-radius: 6rpx;
}
.button {
  line-height: 100rpx;
  font-size: 40rpx;
  width: 630rpx;
  height: 100rpx;
  color: #FFFFFF;
  margin-top: 80rpx;
  background: #00a0e9;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}

